{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "noEmit": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "paths": {
            "@mmomtchev/react-native-settings": [
                "../src"
            ]
        }
    },
    "include": [
        "./*.ts*",
        "./items/*.ts*",
        "./src/*.ts*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}